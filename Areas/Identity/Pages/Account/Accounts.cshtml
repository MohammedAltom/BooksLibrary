@page
@model AccountsModel
@{
    ViewData["Title"] = "Accounts";
}

<h2>Accounts</h2>
<h3>@ViewData["Description"]</h3>

@if (Model.accounts.Any())
{
    <div class="form-inline justify-content-center">
        <label class="label mr-2">Name:</label>
        <input type="search" class="form-control" id="Sfield" />
    </div>
    <div class="OverFlowY DetailsCont mt-3">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Account</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.accounts)
                {
                <tr>
                    <td class="Suser">@user.UserName</td>
                    <td><a class="btn btn-primary" asp-page-handler="Get" asp-route-Update="false" asp-route-UserId="@user.Id" asp-page="./Manage/ProfileAdmin">Details</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <h4>There is no Created account at the moment.</h4>
    </div>

}