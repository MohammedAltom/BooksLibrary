@model IEnumerable<Book>
@{
    ViewData["Title"] = "Books Library";
}

<partial name="_NavPartial" />
<div class="BooksCont">
    @if (Model.Any())
    {
        foreach (var book in Model)
        {
            <a asp-controller="Home" asp-action="ShowBook" asp-route-url="@book.BookURL" class="text-decoration-none InlineBlock" title="@book.BookName">
                <div class="BookCont">
                    <img src="~/images/logo.png" class="BookSym" />
                    <p class="ServP mt-2">@book.BookName</p>
                    <p class="BookP">Author: @book.Author</p>
                </div>
            </a>
        }
    }
    else
    {
        <h3 class="NoBook">There is no such Book/Books in Our lirary Currently</h3>
    }

</div>
